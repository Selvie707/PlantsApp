<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity3"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textSize="36sp"
        android:textColor="#2C5134"
        android:textStyle="bold"
        android:fontFamily="@font/comicsansms"
        android:layout_marginTop="126dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_createNewAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="create your new account"
        android:textSize="18sp"
        android:textColor="#BABABA"
        android:textStyle="bold"
        android:fontFamily="@font/unicornfont"
        android:layout_marginTop="8dp"
        android:letterSpacing="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_register"
        />

    <EditText
        android:id="@+id/et_usernameRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Full Name"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#EBF0EE"
        android:background="@drawable/bg_corner"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:drawableTint="#1C3E1D"
        android:textColorHint="#1C3E1D"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintTop_toBottomOf="@+id/tv_createNewAccount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_emailRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Email"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EBF0EE"
        android:background="@drawable/bg_corner"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:drawableTint="#1C3E1D"
        android:textColorHint="#1C3E1D"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintTop_toBottomOf="@+id/et_usernameRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_passwordRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Password"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EBF0EE"
        android:background="@drawable/bg_corner"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:drawableTint="#1C3E1D"
        android:textColorHint="#1C3E1D"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintTop_toBottomOf="@+id/et_emailRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_confirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Confirm Password"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#EBF0EE"
        android:background="@drawable/bg_corner"
        android:layout_marginHorizontal="16dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:drawableTint="#1C3E1D"
        android:textColorHint="#1C3E1D"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintTop_toBottomOf="@+id/et_passwordRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_TeamOfUse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teamOfUse"
        android:fontFamily="@font/comicsansms"
        android:layout_marginTop="26dp"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_PrivacyNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/privacyNotice"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintTop_toBottomOf="@+id/tv_TeamOfUse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_SignUpRegister"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#486651"
        app:cornerRadius="32dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_loginRegister"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_loginRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/loginRegister"
        android:fontFamily="@font/comicsansms"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>