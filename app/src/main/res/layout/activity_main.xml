<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity1"
    android:backgroundTint="#A2CAB7"
    android:backgroundTintMode="multiply"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_introI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The best"
        android:textSize="52dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.02"
        android:layout_marginTop="122dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_introII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="app for"
        android:textSize="52dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.02"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_introI"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/tv_introIII"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your plant"
        android:textSize="52dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:letterSpacing="0.02"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintTop_toBottomOf="@id/tv_introII"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_signup"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:textColor="#1C6758"
        android:backgroundTint="@color/white"
        app:cornerRadius="32dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_login"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:backgroundTint="#659982"
        app:cornerRadius="32dp"
        android:padding="16dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>