<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/activity2"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/tv_wb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textSize="32dp"
        android:textStyle="bold"
        android:textColor="#486651"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintBottom_toTopOf="@+id/tv_askToLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_askToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to your account"
        android:textColor="#BABABA"
        android:fontFamily="@font/unicornfont"
        android:layout_marginBottom="38dp"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toTopOf="@+id/et_username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_person"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Username"
        android:layout_marginHorizontal="16dp"
        android:inputType="text"
        android:drawableTint="#2C5134"
        android:textColorHint="#2C5134"
        android:backgroundTint="#EBF0EE"
        android:textSize="16sp"
        android:background="@drawable/bg_corner"
        android:fontFamily="@font/comicsansms"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/et_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="8dp"
        android:padding="12dp"
        android:hint="Password"
        android:layout_marginHorizontal="16dp"
        android:inputType="textPassword"
        android:drawableTint="#2C5134"
        android:textSize="16sp"
        android:textColorHint="#2C5134"
        android:backgroundTint="#EBF0EE"
        android:background="@drawable/bg_corner"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/comicsansms"
        app:layout_constraintBottom_toTopOf="@+id/tv_rememberMeLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_forgotPasswordLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:textSize="12dp"
        android:textStyle="bold"
        android:fontFamily="@font/comicsansms"
        android:drawablePadding="8dp"
        android:layout_marginBottom="72dp"
        android:layout_marginHorizontal="16dp"
        android:textColor="#2C5134"
        app:layout_constraintBottom_toTopOf="@+id/btn_loginLogin"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_rememberMeLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me"
        android:textSize="12dp"
        android:fontFamily="@font/comicsansms"
        android:drawablePadding="6dp"
        android:drawableStart="@drawable/ic_check_circle"
        android:drawableTint="#2C5134"
        android:layout_marginBottom="72dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_loginLogin"
        app:layout_constraintStart_toStartOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_loginLogin"
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:backgroundTint="#486651"
        app:cornerRadius="32dp"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tv_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_text"
        android:textStyle="bold"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



</androidx.constraintlayout.widget.ConstraintLayout>